---
import Head from './head.astro'
import Header from '../components/header.astro'
import Footer from '../components/footer.astro'

type Props = {
	title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang='en'>
	<Head {title} />
	<body class='bg-gray-900 min-h-screen p-8 flex flex-col'>
		<Header />
		<main class='max-w-5xl mx-auto mb-8 sm:mb-16'>
			<slot />
		</main>
		<Footer />
	</body>
</html>
